{
    "name": "@workleap/chromado",
    "author": "Workleap",
    "version": "1.2.6",
    "description": "Utilities to use Chromatic with Azure DevOps.",
    "license": "Apache-2.0",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/workleap/wl-chromado.git"
    },
    "publishConfig": {
        "access": "public",
        "provenance": true
    },
    "type": "module",
    "bin": "./dist/bin.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup",
        "lint": "pnpm run \"/^lint:.*/\"",
        "lint:eslint": "eslint . --max-warnings=-0 --cache --cache-location node_modules/.cache/eslint",
        "lint:types": "tsc",
        "changeset": "changeset",
        "ci-release": "pnpm build && changeset publish",
        "dev-docs": "retype start",
        "clean": "pnpm exec pnpm dlx rimraf dist node_modules/.cache",
        "reset": "pnpm clean && pnpm dlx rimraf node_modules pnpm-lock.yaml",
        "list-outdated-deps": "pnpm outdated --format list",
        "update-outdated-deps": "pnpm update --latest"
    },
    "dependencies": {
        "azure-pipelines-task-lib": "^5.2.1",
        "chromatic": "^13.3.2"
    },
    "devDependencies": {
        "@changesets/changelog-github": "0.5.1",
        "@changesets/cli": "2.29.7",
        "@eslint/js": "9.38.0",
        "@types/node": "24.9.2",
        "@typescript-eslint/parser": "8.46.2",
        "@workleap/eslint-configs": "1.0.1",
        "@workleap/tsup-configs": "3.1.3",
        "@workleap/typescript-configs": "3.0.7",
        "eslint": "9.38.0",
        "retypeapp": "3.11.0",
        "tsup": "8.5.0",
        "typescript": "5.9.3",
        "typescript-eslint": "8.46.2"
    },
    "engines": {
        "node": ">=24.0.0"
    },
    "packageManager": "pnpm@10.19.0"
}
